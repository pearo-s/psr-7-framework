{
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=8.3",
    "laminas/laminas-diactoros": "^3.8",
    "laminas/laminas-httphandlerrunner": "^2.13",
    "psr/http-message": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.4"
  },
  "autoload": {
    "psr-4": {
      "Framework\\": "src/Framework"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
    "test": "phpunit"
  }
}
